                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ListView x:Name="calendarDayThreeListView" Grid.Column="2" BorderThickness="1,1,0,0" BorderBrush="Gray">
                            <ListView.ItemTemplate>
                                <DataTemplate >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Termin"/>
                                        <TextBlock Grid.Column="1" Text="Terminbeschreibung"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ListView x:Name="calendarDayFourListView" Grid.Column="3" BorderThickness="1,1,0,0" BorderBrush="Gray">
                            <ListView.ItemTemplate>
                                <DataTemplate >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Termin"/>
