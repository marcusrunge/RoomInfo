<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Helpers="using:RoomInfo.Helpers"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="RoomInfo.Views.InfoPage"
    Style="{StaticResource PageStyle}"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True" 
    mc:Ignorable="d">
    <Page.Resources>
        <Helpers:TimeFormatConverter x:Key="TimeFormatConverter" />
    </Page.Resources>
    <interactivity:Interaction.Behaviors>
        <Helpers:VisualStateDependencyProperty VisualStateProperty="{Binding Occupancy, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </interactivity:Interaction.Behaviors>

    <Grid x:Name="ContentArea">        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="OccupancyVisualStateGroup">
                <VisualState x:Name="FreeVisualState">
                    <VisualState.Setters>
                        <Setter Target="StatusBar.(Panel.Background)">
                            <Setter.Value>
                                <SolidColorBrush Color="#FF00F200"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Text)" Value="🗸"/>
                        <Setter Target="occupancyTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancyTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="StatusBar.(FrameworkElement.HorizontalAlignment)">
                            <Setter.Value>
                                <HorizontalAlignment>Stretch</HorizontalAlignment>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Text)" Value="✓"/>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancyTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>

                        <Setter Target="roomNameTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF007900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancyTextBlock.(UIElement.Visibility)" Value="Visible"/>
                        <Setter Target="grid.(Panel.Background)">
                            <Setter.Value>
                                <SolidColorBrush Color="#7F00F200"/>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="BusyVisualState">
                    <VisualState.Setters>
                        <Setter Target="StatusBar.(Panel.Background)">
                            <Setter.Value>
                                <SolidColorBrush Color="#FFF2F200"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="busyOccupancyTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Text)" Value="⧖"/>
                        <Setter Target="occupancySymbolTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="busyOccupancyTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797900</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="busyOccupancyTextBlock.(UIElement.Visibility)" Value="Visible"/>
                        <Setter Target="grid.(Panel.Background).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#7FF2F200</Color>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="OccupiedVisualState">
                    <VisualState.Setters>
                        <Setter Target="StatusBar.(Panel.Background).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FFF20000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancyTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Text)" Value="🗙"/>
                        <Setter Target="occupancySymbolTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupiedOccupancyTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupiedOccupancyTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF790000</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupiedOccupancyTextBlock.(UIElement.Visibility)" Value="Visible"/>
                        <Setter Target="grid.(Panel.Background).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#7FF20000</Color>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="AbsentVisualState">
                    <VisualState.Setters>
                        <Setter Target="StatusBar.(Panel.Background).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF797979</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="absentOccupancyTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancySymbolTextBlock.(TextBlock.Text)" Value="∞"/>
                        <Setter Target="occupancySymbolTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNameTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="roomNumberTextBlock.(TextBlock.Foreground).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="occupancyTextBlock.(FrameworkElement.FocusVisualPrimaryBrush).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#FF3D3D3D</Color>
                            </Setter.Value>
                        </Setter>
                        <Setter Target="absentOccupancyTextBlock.(UIElement.Visibility)" Value="Visible"/>
                        <Setter Target="grid.(Panel.Background).(SolidColorBrush.Color)">
                            <Setter.Value>
                                <Color>#7F797979</Color>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid x:Name="grid" Background="#00000000" Padding="{StaticResource MediumLeftRightBottomMargin}"   >
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="SizeChanged">
                    <core:InvokeCommandAction Command="{Binding UpdateFontSizeCommand}" CommandParameter="{Binding ElementName=grid}"/>
                </core:EventTriggerBehavior>
                <core:EventTriggerBehavior EventName="Loaded">
                    <core:InvokeCommandAction Command="{Binding UpdateFontSizeCommand}" CommandParameter="{Binding ElementName=grid}"/>
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="CompanyLogo" Source="{Binding CompanyLogo}" HorizontalAlignment="Left" Margin="12,12,12,12"/>
                <TextBlock x:Name="CompanyName" Grid.Column="1" Text="{Binding CompanyName}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="{Binding ExtraLargeFontSize}"/>
                <StackPanel Grid.Column="2">
                    <TextBlock x:Name="Clock" Text="{Binding Clock, UpdateSourceTrigger=PropertyChanged}" FontSize="{Binding ExtraLargeFontSize}" HorizontalAlignment="Right" />
                    <TextBlock x:Name="Date" Text="{Binding Date, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" FontSize="{Binding MediumFontSize}"/>
                </StackPanel>

            </Grid>
            <Grid x:Name="StatusBar" Grid.Row="1" Background="#00000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="roomNameTextBlock"  Text="{Binding RoomName}" FontSize="{Binding ExtraLargeFontSize}" FocusVisualPrimaryBrush="#00000000" Foreground="#00000000" Margin="0,0,36,0"/>
                    <TextBlock x:Name="roomNumberTextBlock" Grid.Column="1" Text="{Binding RoomNumber}" FontSize="{Binding ExtraLargeFontSize}" FocusVisualPrimaryBrush="#00000000" Foreground="#00000000" Margin="36,0,0,0"/>
                </Grid>
                <TextBlock Grid.Row="1" x:Name="occupancyTextBlock" x:Uid="Info_OccupancyTextBlockFree" FontSize="{Binding LargeFontSize}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#00000000" FocusVisualPrimaryBrush="#00000000" Visibility="Collapsed"/>
                <TextBlock Grid.Row="1" x:Name="absentOccupancyTextBlock" x:Uid="Info_OccupancyTextBlockAbsent" FontSize="{Binding LargeFontSize}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#00000000" FocusVisualPrimaryBrush="#00000000" Visibility="Collapsed"/>
                <TextBlock Grid.Row="1" x:Name="occupiedOccupancyTextBlock" x:Uid="Info_OccupancyTextBlockOccupied" FontSize="{Binding LargeFontSize}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#00000000" FocusVisualPrimaryBrush="#00000000" Visibility="Collapsed"/>
                <TextBlock Grid.Row="1" x:Name="busyOccupancyTextBlock" x:Uid="Info_OccupancyTextBlockBusy" FontSize="{Binding LargeFontSize}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#00000000" FocusVisualPrimaryBrush="#00000000" Visibility="Collapsed"/>
                <TextBlock Grid.Row="1" x:Name="occupancySymbolTextBlock" FontSize="{Binding SuperLargeFontSize}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#00000000" FocusVisualPrimaryBrush="#00000000" TextLineBounds="TrimToCapHeight" />
            </Grid>
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="infoScheduleTextBlock" x:Uid="Info_Schedule" FontSize="{Binding MediumToLargeFontSize}" VerticalAlignment="Top"/>
                <Button Content="RESET" FontSize="{Binding MediumToLargeFontSize}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Command="{Binding ResetOccupancyCommand}" Visibility="{Binding ResetButtonVisibility}"/>
                <ListView x:Name="Agenda" Grid.Column="1" ItemsSource="{Binding AgendaItems}">
                    <interactivity:Interaction.Behaviors>
                        <core:EventTriggerBehavior EventName="SizeChanged">
                            <core:InvokeCommandAction Command="{Binding UpdateDataTemplateWidthCommand}" CommandParameter="{Binding ElementName=Agenda, Path=ActualWidth}"/>
                        </core:EventTriggerBehavior>
                        <core:EventTriggerBehavior EventName="Loaded">
                            <core:InvokeCommandAction Command="{Binding UpdateDataTemplateWidthCommand}" CommandParameter="{Binding ElementName=Agenda, Path=ActualWidth}"/>
                        </core:EventTriggerBehavior>
                    </interactivity:Interaction.Behaviors>
                    <ListView.ItemTemplate>
                        <DataTemplate >
                            <StackPanel x:Name="agendaItemStackPanel"  BorderThickness="0,0,0,1" Width="{Binding Width}" BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                                <TextBlock Text="{Binding Title}" FontSize="{Binding LargeFontSize}"/>
                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Start.TimeOfDay, Converter={StaticResource TimeFormatConverter}}" FontSize="{Binding MediumFontSize}"/>
                                    <TextBlock Grid.Column="1" Text=" - " FontSize="{Binding MediumFontSize}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding End.TimeOfDay, Converter={StaticResource TimeFormatConverter}}" FontSize="{Binding MediumFontSize}"/>
                                </Grid>   
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="{Binding MediumFontSize}" SelectedIndex="{Binding SelectedComboBoxIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                        <ComboBoxItem x:Uid="Info_OccupancyFree" FontSize="{Binding MediumFontSize}">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:GoToStateAction StateName="FreeVisualState"/>
                                    <core:InvokeCommandAction Command="{Binding OverrideOccupancyCommand}"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </ComboBoxItem>
                        <ComboBoxItem x:Uid="Info_OccupancyBusy" FontSize="{Binding MediumFontSize}">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:GoToStateAction StateName="BusyVisualState"/>
                                    <core:InvokeCommandAction Command="{Binding OverrideOccupancyCommand}"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </ComboBoxItem>
                        <ComboBoxItem x:Uid="Info_OccupancyOccupied" FontSize="{Binding MediumFontSize}">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:GoToStateAction StateName="OccupiedVisualState"/>
                                    <core:InvokeCommandAction Command="{Binding OverrideOccupancyCommand}"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </ComboBoxItem>
                        <ComboBoxItem x:Uid="Info_OccupancyAbsent" FontSize="{Binding MediumFontSize}">
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:GoToStateAction StateName="AbsentVisualState"/>
                                    <core:InvokeCommandAction Command="{Binding OverrideOccupancyCommand}"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </ComboBoxItem>
                    </ComboBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
